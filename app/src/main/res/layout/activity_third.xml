<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <Button
        android:id="@+id/btn_first_clicked_frm_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move To First!!"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <Button
        android:id="@+id/btn_secondd_screen_clicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move To Second!!"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_first_clicked_frm_third"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <Button
        android:id="@+id/btn_show_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Alert"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_secondd_screen_clicked"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat" />



</RelativeLayout>